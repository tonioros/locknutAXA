<%include Shared/layout%>

    <div class="row" ng-controller="loginUsers">
        <div class="col-lg-4 offset-lg-4 login-box" >
            <form ng-submit="loginUS()" ng-init="LOGU =({})">
                <h2 class="text-center" style="margin: 20px">Inicia Sesion ☺</h2>
                <input type="text" placeholder="Codigo o Correo" ng-model="LOGU.codigoUS" class="form-control" required>
                <input type="password" placeholder="Contraseña" ng-model="LOGU.passUS" class="form-control" required>
                <button type="submit" class="btn btn-outline-primary">Entrar</button>
            </form>
            
        </div>
        <div style="margin: 10px 0px;" class="alert alert-danger alert-dismissible fade show" ng-show="error" role="alert">
                <strong>{{error.titulo}}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p>{{error.mensaje}}.</p>
            </div>
    </div>

<%include Shared/footer%>